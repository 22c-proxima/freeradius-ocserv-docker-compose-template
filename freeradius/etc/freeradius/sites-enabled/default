listen {
  type = auth
  ipaddr = *
  port = 1812
  virtual_server = default
}

listen {
  type = acct
  ipaddr = *
  port = 1813
  virtual_server = default
}

server default {
  authorize {
    sql
    pap
  }
  authenticate {
    Auth-Type PAP {
      pap
    }
  }
  session {
    sql
  }
  accounting {
    acct_unique
    sql
  }
  post-auth {
    sql
  }
}
